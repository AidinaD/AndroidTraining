<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aidina.training.weatherapp.MainActivity"
    android:background="#2196F3">

    <TextView android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:text="">
    </TextView>

    <TextView android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/location"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:drawableLeft="@drawable/ic_temperature"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_celcius"
        android:text="" />

    <Button android:id="@+id/button_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/refresh"
        android:textColor="#FFFFFF"
        android:background="#3F51B5" />

    <ImageView android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView android:id="@+id/wind_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:text=""
            android:drawableLeft="@drawable/ic_wind"
            android:drawablePadding="5dp"/>

        <TextView android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:text=""
            android:drawableLeft="@drawable/ic_humidity"
            android:drawablePadding="5dp"/>

        <TextView android:id="@+id/cloudiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:text=""
            android:drawableLeft="@drawable/ic_cloudiness"
            android:drawablePadding="5dp"/>

    </LinearLayout>

    <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="@string/credit"/>
    -->


</RelativeLayout>
